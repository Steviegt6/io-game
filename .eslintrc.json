{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard",
        "p5js"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "eqeqeq": "warn",
        "no-unused-expressions": "warn",
        "brace-style": "warn"
    }
}